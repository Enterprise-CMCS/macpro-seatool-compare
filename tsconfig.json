{
  // "include": ["./src/**/*"], // TODO: do I need this?
  "exclude": ["./docs*", "build_run"],
  "compilerOptions": {
    "sourceMap": true,
    "incremental": true,
    "target": "ES2020",
    "module": "es2020",
    "lib": ["es6", "dom"],
    "outDir": "build_run",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": true
  }
}
